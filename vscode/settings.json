{
  "update.mode": "manual",
  "C_Cpp.updateChannel": "Insiders",
  "security.workspace.trust.untrustedFiles": "open",
  "cmake.configureOnOpen": true,
  "update.showReleaseNotes": false,
  "editor.accessibilitySupport": "off",
  "editor.suggestSelection": "first",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "telemetry.telemetryLevel": "off",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "code-runner.executorMap": {
    "python": "python",
    "fsharp": "dotnet fsi",
    "c": "cd $dir && gcc -Wall $fileName -o $fileNameWithoutExt.out && $dir$fileNameWithoutExt.out",
    "cpp": "cd $dir && g++ -std=c++14 $fileName -o $fileNameWithoutExt.out && $dir$fileNameWithoutExt.out",
  },
  "git.autofetch": true,
  "C_Cpp.workspaceSymbols": "All",
  "debug.onTaskErrors": "abort",
  "output.smartScroll.enabled": false,
  "keyboard.dispatch": "keyCode",
  "python.terminal.activateEnvInCurrentTerminal": true,

  "terminal.external.linuxExec": "xfce4-terminal",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.unicodeVersion": "11",
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.defaultProfile.linux": "bash",

  "workbench.activityBar.visible": true,
  "window.zoomLevel": 2,
  "window.menuBarVisibility": "toggle",

  "vim.handleKeys": {
    "<C-k>": false
  },
  "vim.hlsearch": true,
  "vim.history": 100,
  "vim.leader": "<Space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "leader",
        "c"
      ],
      "commands": [
        "workbench.action.files.save",
        "editor.action.commentLine"
      ]
    },
    {
      "before": [
        "leader",
        "w"
      ],
      "commands": [
        "workbench.action.files.save",
      ]
    },
    {
      "before": [
        "leader",
        "l",
        "l"
      ],
      "commands": [
        "workbench.action.files.save",
        "workbench.action.debug.run",
        "workbench.action.terminal.focus"
      ]
    },
    {
      "before": [
        "leader",
        "l",
        "c"
      ],
      "commands": [
        "workbench.action.debug.stop"
      ]
    },
    {
      "before": [
        "leader",
        "l",
        "d"
      ],
      "commands": [
        "workbench.action.files.save",
        "workbench.action.debug.start",
        "workbench.action.focusActiveEditorGroup",
      ]
    },
    {
      "before": [
        "leader",
        "l",
        "m"
      ],
      "commands": [
        "workbench.action.files.save",
        "makefile.outline.launchDebug"
      ]
    },
    {
      "before": [
        "leader",
        "l",
        "f"
      ],
      "commands": [
        "workbench.action.files.save",
        "code-runner.run",
      ]
    },
    {
      "before": [
        "leader",
        "f",
        "f"
      ],
      "commands": [
        "editor.foldAll",
      ]
    },
    {
      "before": [
        "leader",
        "f",
        "t"
      ],
      "commands": [
        "editor.toggleFold",
      ]
    },
    {
      "before": [
        "leader",
        "f",
        "u"
      ],
      "commands": [
        "editor.unfoldAll",
      ]
    },
    {
      "before": [
        "<Leader>",
        "/"
      ],
      "commands": [
        ":noh"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "lualatex",
      "command": "lualatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": [
        "%DOCFILE%"
      ],
      "env": {}
    }
  ],
  "latex-workshop.latex.recipe.default": "lastUsed",
  "latex-workshop.latex.recipes": [
    {
      "name": "lualatex ➞ bibtex ➞ lualatex`×2",
      "tools": [
        "lualatex",
        "bibtex",
        "lualatex",
        "lualatex"
      ]
    },
    {
      "name": "pdflatex ➞ bibtex ➞ pdflatex`×2",
      "tools": [
        "pdflatex",
        "bibtex",
        "pdflatex",
        "pdflatex"
      ]
    },
    {
      "name": "lualatex",
      "tools": [
        "lualatex",
      ]
    },
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    },
  ],
  "latex-workshop.view.pdf.trim": 2,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.external.viewer.command": "zathura",
  "latex-workshop.view.pdf.external.viewer.args": [
    "--synctex-editor-command",
    "code --reuse-window -g \"%{input}:%{line}\"",
    "%PDF%"
  ],
  "latex-workshop.view.pdf.external.synctex.command": "zathura",
  "latex-workshop.view.pdf.external.synctex.args": [
    "--synctex-forward=%LINE%:0:%TEX%",
    "%PDF%"
  ],
  "latex-workshop.latex.build.forceRecipeUsage": true,
  "latex-workshop.latex.autoBuild.run": "onSave",


  "editor.wordWrap": "on",

  "jupyter.jupyterServerType": "local",
  "diffEditor.ignoreTrimWhitespace": false,

  "workbench.editor.untitled.hint": "hidden",
  "jupyter.askForKernelRestart": false,
  "breadcrumbs.enabled": false,
  "notebook.consolidatedRunButton": true,
  "csv-preview.separator": "[,;]",

  "cSpell.userWords": [
    "MNIST",
    "Pfeiffer"
  ],
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.tabCompletion": "on",
}