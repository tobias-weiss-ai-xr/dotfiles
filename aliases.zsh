# aliases for Tmux
alias tmux='tmux -2'
alias tmuxi='tmuxinator'
alias ta='tmux attach -t'
alias tnew='tmux new -s'
alias tls='tmux ls'
alias tkill='tmux kill-session -t'

# convenience aliases for editing configs
alias ev='vim ~/.vimrc'
alias evp='vim ~/.vimrc.python'
alias et='vim ~/.tmux.conf'
alias ez='vim ~/.zshrc'
alias aliases='vim ~/.oh-my-zsh/lib/aliases.zsh && . ~/.oh-my-zsh/lib/aliases.zsh'

# jump to actual working dir
alias act='cd ~/repo/01_coden/python'
